<resources>
    <!-- Theme.AppCompat.Light.DarkActionBar-->
    <!-- Base application theme. -->
    <style name="AppTheme" parent="@android:style/Theme.Holo.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- add after-->
        <!--<item name="android:tabStripEnabled">false</item>-->
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:actionBarStyle">@style/my_actionbar_style</item>
        <item name="android:windowBackground">@color/window_bg_color</item>
    </style>
    <style name="my_actionbar_style" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/orangle</item>
        <item name="android:displayOptions">@null</item>
        <!--item name="android:icon">@drawable/transparent</item>-->
    </style>
    <!-- no activionbar-->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <!-- 注释-->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <!-- 注释-->
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <!-- EditTextStyle-->
    <style name="EditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/edit_text_text_color</item>
        <item name="android:textColorHint">@color/edit_text_hint_color</item>
        <item name="android:background">@drawable/ic_bg_edittext</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">30dp</item>
    </style>
    <!-- CheckBoxStyle-->
    <style name="CheckBoxStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@drawable/ic_box</item>
        <item name="android:text">我已阅读并同意</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/check_box_text_color</item>
        <item name="android:checked">true</item>
    </style>
    <!-- ImageViewStyle-->
    <style name="ImageViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    <!-- TextViewStyle-->
    <style name="TextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#667580</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:visibility">visible</item>
    </style>
    <!-- RelativeLayoutStyle-->
    <style name="RelativeLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">#fff6f4f5</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <!-- 认证信息 -->
    <style name="auth_TextView_style" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/txt_size_14sp</item>
        <item name="android:textColor">@color/color667580</item>
    </style>
    <style name="auth_EditText_style" parent="@android:style/Widget.EditText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/txt_size_14sp</item>
        <item name="android:textColor">@color/color667580</item>
        <item name="android:background">@null</item>
        <item name="android:textColorHint">@color/color667580</item>
    </style>
    <style name="right_TextView_style" parent="auth_TextView_style">
        <item name="android:textColor">@color/color667580</item>
        <item name="android:layout_marginRight">@dimen/style_margin_7</item>
    </style>
    <!-- 横线-->
    <style name="row_style_margin">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">#c3d0d9</item>
    </style>
    <!-- 横线 据左右10dp -->
    <style name="row_style_margin10" parent="row_style_margin">
        <item name="android:layout_marginLeft">@dimen/style_margin_10</item>
        <item name="android:layout_marginRight">@dimen/style_margin_10</item>
    </style>
    <!-- 是dialog全屏显示 -->
    <style name="Dialog_FS">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="dialogWindowAnim" parent="android:Animation" mce_bogus="1">
        <item name="android:windowEnterAnimation">@anim/push_up_in</item>
        <item name="android:windowExitAnimation">@anim/push_up_out</item>
    </style>
</resources>

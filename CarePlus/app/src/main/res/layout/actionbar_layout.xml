<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <ImageView
        android:id="@+id/action_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:padding="10dp"
        android:src="@drawable/ic_back"/>
    <TextView
        android:id="@+id/action_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textColor="@color/color333"
        android:text="主页"
        android:textSize="20sp"
        android:layout_centerInParent="true"/>
    <ImageView
        android:id="@+id/action_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:visibility="gone"/>
    <ImageView
        android:id="@+id/action_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/action_task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textColor="@color/primary_color"
        android:textSize="16sp"
        android:paddingRight="10dp"
        android:layout_alignParentRight="true"
        android:visibility="gone"/>
    <Button
        android:id="@+id/btn_auth_submit"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_centerInParent="true"
        android:layout_alignParentRight="true"
        android:background="@color/custom_progress_red_progress_garden"
        android:textColor="@color/white"
        android:layout_marginRight="10dp"
        android:textSize="@dimen/txt_size_14dp"
        android:text="提交"
        android:visibility="gone"/>
    <Button
        android:id="@+id/btn_new_user"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_centerInParent="true"
        android:layout_alignParentRight="true"
        android:background="@color/custom_progress_red_progress_garden"
        android:textColor="@color/white"
        android:layout_marginRight="10dp"
        android:textSize="@dimen/txt_size_14dp"
        android:visibility="gone"/>
    <ImageView
        android:id="@+id/img_new_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:paddingRight="10dp"
        android:src="@drawable/ic_me_selected"
        android:visibility="gone"/>
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#efefef">
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:fadingEdge="none">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="请填写您的认证信息，便于审核通过后便于联系您!"
                android:textColor="@color/color666"
                android:textSize="@dimen/txt_size_12sp"
                android:padding="@dimen/style_margin_10"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#fff">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#dfdfdf" />
                <!-- 姓名 -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/style_margin_10">
                    <TextView
                        style="@style/auth_TextView_style"
                        android:layout_centerVertical="true"
                        android:text="姓名"/>
                    <EditText
                        android:id="@+id/edit_auth_name"
                        style="@style/auth_EditText_style"
                        android:layout_alignParentRight="true"
                        android:gravity="right"
                        android:hint="请输入您的真实姓名"/>
                </RelativeLayout>
                <View
                    style="@style/row_style_margin10"/>
                <!-- 医院 -->
                <RelativeLayout
                    android:id="@+id/layout_auth_hos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">
                    <TextView
                        style="@style/auth_TextView_style"
                        android:layout_centerVertical="true"
                        android:text="医院"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:gravity="center">
                        <TextView
                            android:id="@+id/txt_auth_hos"
                            style="@style/right_TextView_style"
                            android:text=""/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_arrow_next"/>
                    </LinearLayout>
                </RelativeLayout>
                <View
                    style="@style/row_style_margin10"/>
                <!-- 科室 -->
                <RelativeLayout
                    android:id="@+id/layout_auth_keshi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">
                    <TextView
                        style="@style/auth_TextView_style"
                        android:layout_centerVertical="true"
                        android:text="科室"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_alignParentRight="true">
                        <TextView
                            android:id="@+id/txt_auth_ks"
                            style="@style/right_TextView_style"
                            android:text=""/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_arrow_next"/>
                    </LinearLayout>
                </RelativeLayout>
                <View
                    style="@style/row_style_margin10"/>
                <!-- 职称 -->
                <RelativeLayout
                    android:id="@+id/layout_auth_professional"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">
                    <TextView
                        style="@style/auth_TextView_style"
                        android:layout_centerVertical="true"
                        android:text="职称"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:gravity="center">
                        <TextView
                            android:id="@+id/txt_auth_zc"
                            style="@style/right_TextView_style"
                            android:text=""/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_arrow_next"/>
                    </LinearLayout>
                </RelativeLayout>
                <View
                    style="@style/row_style_margin10"/>
                <!-- 科室电话 -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">
                    <TextView
                        style="@style/auth_TextView_style"
                        android:layout_centerVertical="true"
                        android:text="科室电话"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true">
                        <EditText
                            android:id="@+id/edit_auth_phone"
                            style="@style/auth_EditText_style"
                            android:layout_width="60dp"
                            android:layout_alignParentRight="true"
                            android:gravity="center"
                            android:inputType="number"
                            android:hint="区号"/>
                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="#dfdfdf"
                            android:layout_marginRight="5dp"
                            android:layout_marginLeft="5dp"/>
                        <EditText
                            android:id="@+id/edit_auth_number"
                            style="@style/auth_EditText_style"
                            android:layout_width="100dp"
                            android:layout_alignParentRight="true"
                            android:gravity="center"
                            android:inputType="number"
                            android:hint="电话号码"/>
                    </LinearLayout>
                </RelativeLayout>
                <View
                    style="@style/row_style_margin10"/>
                <!-- 执业证或胸牌编号 -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/style_margin_10">
                    <TextView
                        style="@style/auth_TextView_style"
                        android:layout_centerVertical="true"
                        android:text="执业证或胸牌编号"/>
                    <EditText
                        android:id="@+id/edit_auth_bianhao"
                        style="@style/auth_EditText_style"
                        android:layout_alignParentRight="true"
                        android:hint="编号"/>
                </RelativeLayout>
                <View
                    style="@style/row_style_margin10"/>
                <!-- 执业证或胸牌 -->
                <RelativeLayout
                    android:id="@+id/layout_auth_photo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/style_margin_10">
                    <TextView
                        style="@style/auth_TextView_style"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/txt_size_18sp"
                        android:text="执业证或胸牌"/>
                    <ImageView
                        android:id="@+id/img_auth_phone"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/ic_default_avatar"/>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#dfdfdf" />
            </LinearLayout>
            <!-- 补充说明 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#dfdfdf"
                android:layout_marginTop="@dimen/style_margin_10"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/style_margin_10"
                android:background="#fff">
                <EditText
                    android:id="@+id/edit_auth_des"
                    style="@style/auth_EditText_style"
                    android:layout_width="match_parent"
                    android:layout_alignParentRight="true"
                    android:minLines="3"
                    android:gravity="top"
                    android:hint="可以补充说明一下您的特长以及介绍，让跟多的人了解您哦！"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#dfdfdf" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#efefef"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/style_margin_10">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/color667580"
            android:text="添加医院"/>
        <Button
            android:id="@+id/btn_no_hos"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:background="@color/custom_progress_red_progress_garden"
            android:layout_alignParentRight="true"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_size_14sp"
            android:text="完成"/>
    </RelativeLayout>
    <View style="@style/row_style_margin"/>
    <EditText
        android:id="@+id/edit_no_hos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="请输入您所在医院的名称"
        android:textSize="@dimen/txt_size_14sp"
        android:textColor="@color/color667580"
        android:textColorHint="@color/color667580" />
    <TextView
        android:id="@+id/txt_nohos_war"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:textSize="@dimen/txt_size_12sp"
        android:gravity="center"
        android:textColor="@color/colorf13335"
        android:visibility="invisible"
        android:text="医院名称不能为空"/>
</LinearLayout>

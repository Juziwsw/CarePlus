<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#efefef">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_marginTop="15dp">
        <View style="@style/row_style_margin"/>
        <RelativeLayout
            android:id="@+id/rel_setting_feek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">
            <ImageView
                android:id="@+id/settig_img01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_personal_respond"/>
            <TextView
                style="@style/auth_TextView_style"
                android:layout_toRightOf="@id/settig_img01"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="意见反馈"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_arrow_next"/>
        </RelativeLayout>
        <View style="@style/row_style_margin10"/>
        <RelativeLayout
            android:id="@+id/rel_setting_pbj"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">
            <ImageView
                android:id="@+id/settig_img02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_personal_respond"/>
            <TextView
                style="@style/auth_TextView_style"
                android:layout_toRightOf="@id/settig_img02"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="关于陪伴家(医)"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_arrow_next"/>
        </RelativeLayout>
        <View style="@style/row_style_margin"/>
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:textColor="@color/white"
        android:text="退出登录"
        android:background="@drawable/ic_btn_normal"/>
</LinearLayout>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="cn.com.cjland.careplus.fragment.MeFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:id="@+id/rel_personal_header"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:padding="10dp" >
        <RelativeLayout
            android:id="@+id/lin_avatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/ic_personal_ripple">
            <cn.com.cjland.careplus.view.RoundBorderImageView
                android:id="@+id/iv_avatar"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_default_avatar"
                android:scaleType="fitXY"
                app:riv_corner_radius="100dip"
                app:riv_border_width="0dip"
                app:riv_oval="false"
                app:riv_border_color="@color/gray"/>
            <ImageView
                android:id="@+id/iv_star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:paddingRight="55dp"
                android:paddingBottom="55dp"
                android:src="@drawable/ic_me_user_rank"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:paddingRight="60dp"
                android:paddingBottom="90dp"
                android:text="200"
                android:textSize="12sp"
                android:textColor="@color/black" />
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/lin_avatar"
            android:layout_marginTop="-30dp"
            android:layout_centerHorizontal="true"
            android:text="归辞"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:visibility="visible"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/lin_avatar"
            android:layout_centerHorizontal="true"
            android:gravity="center">
            <TextView
                android:id="@+id/tv_hospital"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="上海仁济医院"
                android:textColor="@color/black"
                android:background="@drawable/me_textview_border"
                android:visibility="visible"/>
            <TextView
                android:id="@+id/tv_specialty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:background="@drawable/me_textview_border"
                android:layout_marginLeft="10dp"
                android:text="骨科"
                android:textColor="@color/black"
                android:visibility="visible"/>
        </LinearLayout>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rel_personal_header">
        <include
            layout="@layout/layout_personal_options"/>
    </ScrollView>
 </RelativeLayout>

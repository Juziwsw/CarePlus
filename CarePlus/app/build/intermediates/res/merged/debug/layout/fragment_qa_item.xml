<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/linearlayout_circular_bg"
        android:layout_marginTop="20dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/user_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginLeft="75dp">
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="花千骨"
                android:textSize="17sp"
                android:textColor="#3D3437"
                android:gravity="center" />
            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textSize="12sp"
                android:textColor="@color/colora1abb3"
                android:text="2016-02-25 12:00" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rel_zixun_photo"
            android:layout_width="match_parent"
            android:layout_height="145dp"
            android:layout_marginTop="15dp"
            android:visibility="gone">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_login_header_bg"/>
            <View
                android:layout_width="50dp"
                android:layout_height="25dp"
                android:background="#000"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:alpha="0.3"/>
            <TextView
                android:id="@+id/tv_phone_num"
                android:layout_width="50dp"
                android:layout_height="25dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:text="4张"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">
            <TextView
                android:id="@+id/tv_des_left"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="病情描述"
                android:textColor="@color/colora1abb3"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/tv_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="7dp"
                android:layout_marginTop="2dp"
                android:maxLines="3"
                android:ellipsize="end"
                android:textSize="@dimen/txt_size_14sp"
                android:textColor="@color/color333"
                android:text="\u3000\u3000\u3000\u3000\u3000智慧医疗由三部分组成，分别为智慧医生领域卫生系统、以及家庭健康系统……" />
        </RelativeLayout>
        <View style="@style/row_style_margin"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">
                <RelativeLayout
                    android:id="@+id/rel_zixun_answer"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/iv_respond"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@drawable/ic_respond"
                        android:layout_marginLeft="50dp"/>
                    <TextView
                        android:id="@+id/tv_respond_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/iv_respond"
                        android:layout_centerVertical="true"
                        android:singleLine="true"
                        android:textSize="14sp"
                        android:textColor="@color/color667580"
                        android:text="2048"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rel_zixun_follow"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/iv_heart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_heart_normal"
                        android:layout_marginLeft="50dp"/>
                    <TextView
                        android:id="@+id/tv_heart_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/iv_heart"
                        android:layout_centerVertical="true"
                        android:singleLine="true"
                        android:textSize="14sp"
                        android:textColor="@color/color667580"
                        android:text="1563"/>
                </RelativeLayout>
            </LinearLayout>
            <View android:layout_width="0.5dp"
                android:layout_height="20dp"
                android:background="#c3d0d9"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
    </LinearLayout>
    <cn.com.cjland.careplus.view.RoundBorderImageView
        android:id="@+id/iv_avatar"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginLeft="15dp"
        android:src="@drawable/ic_default_avatar"
        android:scaleType="fitXY"
        app:riv_corner_radius="100dip"
        app:riv_border_width="0dip"
        app:riv_oval="false"
        app:riv_border_color="@color/gray"
        />
</RelativeLayout>
